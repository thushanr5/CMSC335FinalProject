<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style_hp.css" type="text/css">
    <title>Flight Results</title>
    <style>
        /* .flight-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            border-radius: 10px;
            
        }*/
        .flight-table th, .flight-table td {
            padding: 10px;
            
            /* border: 1px solid #ddd; */
            text-align: left;
            /* border-radius: 10px; */
        }
        /*.flight-table th {
            background-color: #f2f2f2;
        } */

        .flight-table tbody tr {
            background-color:cornsilk;
            border-radius: 10px;
        }

        .flight-table tbody tr:hover {
            background-color: #e2f0fd;  /* Light blue hover color */
            transition: background-color 0.3s ease; /* Smooth transition */
        }
        
        .book-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="bg_img">
        <div class="design">
            <h1>Available Flights from <%= departure %> to <%= arrival %></h1>

            <% if (matching_flights.length > 0) { %>
                <table class="flight-table">
                    <thead>
                        <tr>
                            <th>Airline</th>
                            <th>Flight</th>
                            <th>Departure</th>
                            <th>Arrival</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% matching_flights.forEach(flight => { %>
                            <tr>
                                <td><%= flight.airline.name %> (<%= flight.airline.iata %>)</td>
                                <td><%= flight.flight.number %></td>
                                <td>
                                    <strong><%= flight.departure.airport %></strong><br>
                                    <%= flight.departure.scheduled %><br>
                                    Terminal: <%= flight.departure.terminal %>, 
                                    Gate: <%= flight.departure.gate %>
                                </td>
                                <td>
                                    <strong><%= flight.arrival.airport %></strong><br>
                                    <%= flight.arrival.scheduled %><br>
                                    Terminal: <%= flight.arrival.terminal %>, 
                                    Gate: <%= flight.arrival.gate %>
                                </td>
                                <td>
                                    <button class="book-btn">Book Now</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <h2> <a href="/travel_info">Go Back</a></h2>
            <% }
            else { %>
                <div class="no-flights">
                    <h2>No scheduled flights found between <%= departure %> and <%= arrival %></h2>
                    <h2><a href="/travel_info">Try another search</a></h2>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>